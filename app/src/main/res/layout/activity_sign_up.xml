<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">

    <EditText
        android:id="@+id/signUpAct_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/signUpAct_edit_password"
        app:layout_constraintStart_toStartOf="@+id/signUpAct_edit_password" />


    <EditText
        android:id="@+id/signUpAct_edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/signUpAct_edit_email"
        app:layout_constraintStart_toStartOf="@+id/signUpAct_edit_email" />

    <EditText
        android:id="@+id/signUpAct_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signUpAct_text_signUp_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="SignUp"
        app:layout_constraintStart_toStartOf="@+id/signUpAct_edit_phone"
        app:layout_constraintTop_toBottomOf="@+id/signUpAct_edit_phone" />

    <EditText
        android:id="@+id/signUpAct_edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="phone"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/signUpAct_edit_email"
        app:layout_constraintTop_toBottomOf="@+id/signUpAct_edit_email" />
</androidx.constraintlayout.widget.ConstraintLayout>